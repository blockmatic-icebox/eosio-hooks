{
  "compilerOptions": {
    "rootDirs": [
      "src/"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "outDir": "./build",
    "types": ["react"]
  },
  "exclude": ["node_modules", "exclude", "example"],
  "include": ["./src"]
}

